		$(PACKAGE)-bin-x86.tgz                      \
		$(PACKAGE)-bin-x86-python.tgz               \
		$(PACKAGE)-bin-bytecode-$(OCAMLVERSION).tgz \
		$(PACKAGE)-bin-bytecode-$(OCAMLVERSION)-python.tgz
